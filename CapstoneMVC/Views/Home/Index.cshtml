@model dynamic
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Executive Biotech Advisors</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #ffffff;
            color: #333;
        }
        .brand-orange {
            color: #f97316; /* Tailwind orange-500 */
        }
        .bg-orange {
            background-color: #f97316;
        }
        .hero {
            background: linear-gradient(to right, #000000cc, #00000088), url('/images/hero-placeholder.jpg') center/cover no-repeat;
            color: white;
            padding: 100px 20px;
            text-align: center;
        }
        .service-icon {
            font-size: 2rem;
            color: #f97316;
        }
        .cta-section {
            background-color: #f97316;
            color: white;
            padding: 60px 20px;
        }
        .footer {
            background-color: #111;
            color: #aaa;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <section class="hero">
        <div class="container">
            <h1 class="display-4 fw-bold">Accelerate Your Breakthroughs</h1>
            <p class="lead">Your turnkey solution for connecting with expert advisors, marketers, and funders in pharmaceutical innovation.</p>
            <a class="btn btn-lg bg-orange text-white mt-4" href="#services">Explore Services</a>
        </div>
    </section>
    <section id="services" class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">What We Offer</h2>
            <div class="row text-center">
                <div class="col-md-4">
                    <i class="fas fa-user-md service-icon"></i>
                    <h5 class="mt-3">Medical Expert Network</h5>
                    <p>Access top-tier specialists across key therapeutic areas, including oncology, immunology, and rare diseases.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-chart-line service-icon"></i>
                    <h5 class="mt-3">Commercial Strategy</h5>
                    <p>From FDA approval to market entry, we guide you with precision-focused go-to-market support.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-hand-holding-usd service-icon"></i>
                    <h5 class="mt-3">Funding Connections</h5>
                    <p>Partner with our network of early-stage biotech investors and advisors with proven fundraising success.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- place holder section for my 3D animation, would like to experiment if I have time -->

    <section class="py-5 bg-light">
        <div class="container text-center">
            <h2 class="mb-4">Visualize Innovation</h2>
            <p class="mb-4">Client Would love a 3D rotating Visual of a Virus.</p>
            <div id="virus-visual" style="width: 100%; height: 400px; background-color: #eee; border: 2px dashed #ccc;"></div>
            <small class="text-muted d-block mt-2">(I would play in this space with Three.js or some type of GIF on repeat.)</small>
        </div>
    </section>
    <section class="cta-section text-center">
        <div class="container">
            <h2>Ready to Transform Your Research?</h2>
            <p class="lead">Contact us today to get matched with the experts you need to move forward confidently.</p>
            <a href="#contact" class="btn btn-light btn-lg mt-3">Book a Consultation</a>
        </div>
    </section>
    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year Executive Biotech Advisors. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


